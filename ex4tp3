#include <stdio.h>
#include <stdlib.h>

int main()
{
    int n ,i, s=0 ;


         printf("entre valeur n ");
    scanf ("%d",&n);



    for ( i=1; i< n ;i++)
   {
       if (n % i ==0)
       {
           s=s+i;
       }
   }
   printf("la somme =%d ",s);
   if ( n= s )
   {
       printf("nbr  est parfait ");
   }
   else
   {
       printf("nbr  est non  parfait ");
   }


    return 0;
}
