#include <stdio.h>
#include <stdlib.h>

int main()
{
    int i,k,j,n;
    printf(" entre le valeur ",n);
    scanf("%d", &n);
    for (i=0;i<n;i++)
    {
        for(k=n-1-i;k>0; k--)
        {
            ptrintf (" ");
        }
        for(j=0; j<=i*2;j++)
        {
            printf("*");
            printf( " \n");
        }
    }
    return 0;
}
